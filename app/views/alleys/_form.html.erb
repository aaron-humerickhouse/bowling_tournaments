    <div class="field">
      <%= address.label :secondary_address %>
      <%= address.text_field :secondary_address %>
    </div>

    <div class="field">
      <%= address.label :city %>
      <%= address.text_field :city %>
    </div>

    <div class="field">
      <%= address.label :state %>
      <%= address.text_field :state %>
    </div>

    <div class="field">
      <%= address.label :zip_code %>
      <%= address.text_field :zip_code %>
    </div>
  <% end %>

