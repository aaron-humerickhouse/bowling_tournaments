<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h3>Account</h3>
  <div class="form-group">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'form-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>
  <br />
  <h3>Personal</h3>
  <div class="form-group">
    <%= f.label :first_name, class: 'form-label' %><br />
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'form-label' %><br />
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <%= f.fields_for :user_setting_attributes do |settings| %>
    <div class="form-group">
      <%= settings.label :zip_code, class: 'form-label' %><br />
      <%= settings.text_field :zip_code, class: 'form-control' %>
    </div>
    <br />
    <div class="form-group">
      <%= settings.label :notification_search_radius, class: 'form-label' %>
      <% UserSetting::NOTIFICATION_SEARCH_RADIUS.each do |radius| %>
        <div class="form-check">
          <%= settings.radio_button(:notification_search_radius, radius, { id: "radius-#{radius}", class: 'form-radio-input' } ) %>
          <%= settings.label radius > 0 ? pluralize(radius, 'mile') : "No Distance Restriction", for: "radius-#{radius}", class: 'form-radio-label' %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= settings.label :notification_period, class: 'form-label' %>
      <% UserSetting::NOTIFICATION_PERIODS.each do |period| %>
        <div class="form-check"
          <%= settings.check_box(:notification_period, { id: "period-#{period}", :multiple => true, class: 'form-check-input' }, period) %>
          <%= settings.label period > 0 ? pluralize(period, 'day') : "No Notifications", for: "period-#{period}", class: 'form-check-label' %>
        </div>
      <% end %>
      </div>
  <% end %>
  <br />
  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
